      <TextField fx:id="meaningTextField" editable="false" layoutX="339.0" layoutY="411.0" prefHeight="38.0" prefWidth="263.0" visible="false" />
      <TextField fx:id="meaningLabel" alignment="CENTER" editable="false" layoutX="252.0" layoutY="411.0" prefHeight="38.0" prefWidth="83.0" text="MEANING:" visible="false" />
      <ImageView fx:id="resultImageView" fitHeight="150.0" fitWidth="200.0" layoutX="327.0" layoutY="231.0" pickOnBounds="true" preserveRatio="true" visible="false">
         <image>
            <Image url="@../images/correctgame3.png" />
         </image>
      </ImageView>
      <ImageView fx:id="guideImage" fitHeight="382.0" fitWidth="382.0" layoutX="239.0" layoutY="93.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../images/GUIDECHAOTICWORD.png" />
         </image>
      </ImageView>
      <JFXButton contentDisplay="CENTER" layoutX="14.0" layoutY="14.0" onAction="#showInstruction" prefHeight="32.0" prefWidth="34.0" textAlignment="CENTER" textFill="TRANSPARENT">
         <graphic>
            <ImageView fitHeight="40.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/information.png" />
               </image>
            </ImageView>
         </graphic>
      </JFXButton>
   </children>
</AnchorPane>
